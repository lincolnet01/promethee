<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_6.1.xsd">

  <module name="tma" package="com.axelor.apps.tma.db"/>

  <entity name="TicketCategory" cacheable="true" lang="java">
    <string name="name" title="Name" required="true"/>
    <string name="code" title="Code" required="true" unique="true"/>
    <string name="categoryLevel" title="Heriarchical Level" required="true"/>
    <string name="description" title="Description" required="false" large="true"/>
    <many-to-one name="parentCategory" ref="com.axelor.apps.tma.db.TicketCategory"
      title="Parent Category" required="false"/>

    <!-- <one-to-many name="subCategories" ref="com.axelor.apps.tma.db.TicketCategory" title="Child Categories"
      inverse="parentCategory"/> -->

    <!-- <finder-method name="findAllParent" using="String:separator" filter="heriarchical_path not like
      '%'|| :separator ||'%'" all="true" /> <finder-method name="findSubCategories" using="String:parentPath"
      filter="heriarchical_path like :parentPath || '%'" all="true"/> -->
  </entity>

</domain-models>